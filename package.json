{
  "name": "io-functions-template",
  "description": "",
  "author": "IO team",
  "repository": "https://github.com/pagoPA/io-functions-template",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist && yarn generate",
    "build": "tsc",
    "watch": "tsc -w",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "predev": "npm-run-all generate build",
    "dev": "npm-run-all --parallel start watch",
    "pretest": "npm-run-all generate:*",
    "test": "jest",
    "pretest:coverage": "npm-run-all generate:*",
    "test:coverage": "jest --coverage",
    "lint": "tslint -p .",
    "lint-api": "oval validate -p openapi/index.yaml",
    "dist:modules": "modclean -r -n default:safe && yarn install --production",
    "dist:zip": "zip -r dist.zip . --exclude @.funcignore --exclude .funcignore",
    "predeploy": "npm-run-all generate build dist:modules",
    "generate:definitions": "shx rm -rf ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --out-dir ./generated/definitions",
    "generate": "npm-run-all generate:*"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.3",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/passport": "^1.0.4",
    "@types/passport-azure-ad": "^4.0.7",
    "@types/vfile-message": "^2.0.0",
    "danger": "^8.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "dotenv-cli": "^3.1.0",
    "italia-tslint-rules": "*",
    "italia-utils": "^6.1.0",
    "jest": "^24.8.0",
    "jest-mock-express": "^0.1.1",
    "modclean": "^3.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "oval": "^1.0.0",
    "prettier": "^1.18.2",
    "release-it": "^12.4.3",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.7.0"
  },
  "dependencies": {
    "azure-storage": "^2.10.3",
    "cors": "^2.8.5",
    "durable-functions": "^1.2.4",
    "express": "^4.15.3",
    "fp-ts": "1.17.4",
    "io-functions-commons": "^16.1.0",
    "io-functions-express": "^0.1.0",
    "io-ts": "1.8.5",
    "italia-ts-commons": "^5.1.11",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.3.0",
    "pg": "^8.4.2",
    "typeorm": "^0.2.28",
    "winston": "^3.2.1"
  },
  "resolutions": {
    "fp-ts": "1.17.4",
    "io-ts": "1.8.5",
    "@types/express": "4.16.0"
  }
}
